<?xml version="1.0" encoding="UTF-8"?>
<clientConfig version="1.1">
	<emailProvider id="{{ domains[0].name }}">
		<domain>{{ domains[0].name }}</domain>
		<displayName>Excision Mail - {{ domains[0].name }}</displayName>
		<displayShortName>Excision</displayShortName>
		<incomingServer type="imap">
			<hostname>{{ mail_subdomain }}.{{ domains[0].name }}</hostname>
			<port>993</port>
			<socketType>SSL</socketType>
			<authentication>password-cleartext</authentication>
			<username>%EMAILADDRESS%</username>
		</incomingServer>
		<outgoingServer type="smtp">
			<hostname>{{ mail_subdomain }}.{{ domains[0].name }}</hostname>
			<port>465</port>
			<socketType>SSL</socketType>
			<authentication>password-cleartext</authentication>
			<username>%EMAILADDRESS%</username>
		</outgoingServer>
		<outgoingServer type="smtp">
			<hostname>{{ mail_subdomain }}.{{ domains[0].name }}</hostname>
			<port>587</port>
			<socketType>STARTTLS</socketType>
			<authentication>password-cleartext</authentication>
			<username>%EMAILADDRESS%</username>
		</outgoingServer>
		<documentation url="https://autoconfig.{{ domains[0].name }}">
			<descr lang="en">Mail settings and client configuration</descr>
		</documentation>
	</emailProvider>
</clientConfig>
